            color: rgb(17, 17, 8);
            line-height: 25px;
            text-transform: capitalize;
            margin: 0 0 16px 0;
            transition: all 0.3s ease 0s;
        }

        .service-box .description {
            font-size: 15px;
            line-height: 25px;
            color: maroon;
            margin: 0;
            transition: all 0.3s ease 0s;
        }

        .service-box:hover i,
        .service-box:hover .title,
        .service-box :hover .description {
            color: rgb(165, 59, 59);
        }


